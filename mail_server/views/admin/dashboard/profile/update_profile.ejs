<%- include('../../include/header') %>
<section class="content-header">
    <h1>
        Dashboard
        <small>Update Profile</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Update Profile</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Profile</h3>
                </div>
                <form method="post" sbform="true" saveid="#action_data" url="admin_action/update_profile">
                    <div class="box-body">
                        <div class="form-group p-5">
                            <div id="action_data"></div>
                        </div>
                        <div class="form-group">
                            <label>Firstname</label>
                            <input type="text" class="form-control" placeholder="Firstname" required="" name="firstname" value="<%= user_data.firstname %>">
                        </div>
                        <div class="form-group">
                            <label>Lastname</label>
                            <input type="text" class="form-control" placeholder="Lastname" required="" name="lastname" value="<%= user_data.lastname %>">
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Update Profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('../../include/footer') %>