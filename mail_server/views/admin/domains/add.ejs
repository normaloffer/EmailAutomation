<%- include('../include/header') %>
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/user/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title"><%= title %></h4>
                </div>
                <form class="box-body" method="post" sbform="true" saveid="#action_data" url="admin_action/add_domain">
                    <% if(is_enc == true){ %>
                        <input type="hidden" name="enc_id" value="<%= enc_data.id %>">
                    <% } %>
                    <div class="form-group">
                        <label>Domain Name</label>
                        <input type="text" class="form-control" placeholder="Name" name="name" value="<% if(is_enc == true){ %><%= enc_data.name; %><% } %>">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><%= title %></button>
                    </div>
                    <div class="form-group">
                        <div id="action_data"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('../include/footer') %>